repo=$1

if [[ -z "$repo" ]]; then
  echo "Usage: ./bootstrap <repo>"
  exit
fi

build() {
  pushd $1
  shift
  sudo makechrootpkg -r /var/lib/archbuild/${repo}-x86_64/ -- -i -r $@
  popd
}

${repo}-x86_64-build -c
build linux-api-headers-git
build glibc --nocheck
build binutils --nocheck
build gcc-git --nocheck
build glibc 
build binutils
build gcc-git
